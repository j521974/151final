import java.awt.Graphics;
import java.awt.Point;
import java.awt.Rectangle;
import java.util.List;

public class DRect extends DShape {

	public DRect(DShapeModel model) {
		super(model);
		// TODO Auto-generated constructor stub
	}
	//Each shape should have a draw(Graphics g)method 
	//where it draws itself. The canvas can loop through all the shapes, 
	//sending each the draw()message.
	public void draw(Graphics g){
		g.setColor(model.getColor());
		Rectangle r = getModel().getBounds();
		g.fillRect(r.x,r.y,r.width,r.height);
	}
}
